{% extends "base.html.twig" %}

{% block title %}Liste des utilisateurs{{ parent() }}{% endblock %}

{% block contenu %}

<h1>Liste des utilisateur</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Rôle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for i in liste %}
                <tr>
                    <td>{{ i.email }}</td>
                    <td>{{ i.nom }}</td>
                    <td>{{ i.prenom }}</td>
                    <td>{{ i.libellerole }}</td>
                    <td><a href="index.php?page=utilisateurModif&id={{i.id}}">Modifier</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}