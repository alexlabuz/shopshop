{% extends "base.html.twig" %}

{% block title %}Connection{{ parent() }}{% endblock %}

{% block contenu %}

	{% if form.valide is defined %}
		<h1>Vous êtes connecté(e)</h1>
		<p>Bienvenue {{ form.email }} !</p>

		{% if form.resteConnecte == true %}
			<p>Vous restez connectez</p>
		{% else %}
			<p>Vous serais déconnecté(e) à la fermeture du navigateur</p>
		{% endif %}

	{% else %}
	<h1 class="text-primary text-center">Connectez-vous</h1>

	<div class="container-sm">
		<div class="row col-12 justify-content-center">

		<form class="needs-validation col-5" action="index.php?page=connection" method="post">
			<div class="form-group">
			<label for="email">Email address</label>
			<input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
			<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			</div>

			<div class="form-group">
			<label for="mdp">Password</label>
			<input type="password" class="form-control" id="mdp" name="mdp">
			</div>

			<div class="form-group form-check">
			<input type="checkbox" class="form-check-input" id="resteConnecte" name="resteConnecte">
			<label class="form-check-label" for="resteConnecte">Ce souvenir de moi</label>
			</div>

			<button type="submit" class="btn btn-primary" name="btConnecte">Submit</button>
		</form>

	</div>
	{% endif %}

{% endblock %}